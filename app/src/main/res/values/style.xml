<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="fullscreenDialog" parent="Theme.AppCompat.Light.Dialog">
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="actionMenuTextColor">@color/colorAccent</item>-->
    </style>
    <style name="md_input_edit_text">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="md_input_edit_text_layout">
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperTextTextColor">@color/colorSecondary</item>
    </style>
    <style name="md_input_edit_text_layout_dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="helperTextTextColor">@color/colorSecondary</item>
    </style>
    <style name="md_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorSecondary</item>
    </style>
</resources>